<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.Fonts" />
  </ItemGroup>


  <ItemGroup>
    <ModelBuilderFiles Include="$(MSBuildProjectDirectory)/modelBuilder/**/*" />
    <BinaryBuilderFiles Include="$(MSBuildProjectDirectory)/downloadBinaries.sh" />
  </ItemGroup>

  <Target Name="BuildModels"
          BeforeTargets="BeforeBuild"
          Inputs="@(ModelBuilderFiles)"
          Outputs="models/.built">
    <RemoveDir Directories="models" Condition="Exists('models')" />
    <Exec Command="uv run build_models.py ../models" WorkingDirectory="$(MSBuildProjectDirectory)/modelBuilder" />
    <Touch Files="models/.built" AlwaysCreate="true" />
  </Target>

  <Target Name="DownloadBinaries"
          BeforeTargets="BeforeBuild"
          Inputs="@(BinaryBuilderFiles)"
          Outputs="binaries/.downloaded">
    <RemoveDir Directories="binaries" Condition="Exists('binaries')" />
    <Exec Command="bash downloadBinaries.sh binaries" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Touch Files="binaries/.downloaded" AlwaysCreate="true" />
  </Target>

  <ItemGroup>
    <EmbeddedResource Include="models/**/*.onnx" />
    <EmbeddedResource Include="models/**/*.json" />
    <EmbeddedResource Include="binaries/ffmpeg" />
    <EmbeddedResource Include="binaries/ffprobe" />
    <EmbeddedResource Include="arial.ttf" />
    <EmbeddedResource Include="CharacterDictionary.Data.txt" />
    <EmbeddedResource Include="templates/*.liquid" />
  </ItemGroup>

  <Target Name="CleanModels" BeforeTargets="BeforeClean">
    <RemoveDir Directories="models" Condition="Exists('models')" />
  </Target>

  <Target Name="CleanBinaries" BeforeTargets="BeforeClean">
    <RemoveDir Directories="binaries" Condition="Exists('binaries')" />
  </Target>

</Project>
