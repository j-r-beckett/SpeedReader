<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 {{ Width }} {{ Height }}" width="{{ Width }}" height="{{ Height }}">
  <defs>
    <style>
      .bounding-box { fill: none; stroke: red; stroke-width: 2; }
      .oriented-bounding-box { fill: none; stroke: blue; stroke-width: 2; }
      .polygon { fill: none; stroke: green; stroke-width: 2; }
      .dbnet-overlay { opacity: 0.5; }
      .recognized-text {
        fill: white;
        text-shadow: 1px 1px 1px black, -1px -1px 1px black, 1px -1px 1px black, -1px 1px 1px black;
        font-family: Arial, sans-serif;
        font-weight: bold;
        pointer-events: all;
      }

      .legend {
        font-family: Arial, sans-serif;
        font-size: {{ Width | divided_by: 65 }}px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(0, 0, 0, 0.5);
        border-radius: 12px;
        padding: {{ Width | divided_by: 100 }}px;
        display: flex;
        flex-direction: column;
        gap: {{ Width | divided_by: 100 }}px;
        width: fit-content;
      }
      .legend-item {
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: {{ Width | divided_by: 75 }}px;
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        user-select: none;
      }
      .legend-item:hover { color: #ddd; }
      .legend-swatch {
        width: {{ Width | divided_by: 50 }}px;
        height: 6px;
        border-radius: 3px;
      }
      .hidden { display: none; }
    </style>
  </defs>

  <image width="{{ Width }}" height="{{ Height }}" xlink:href="{{ BaseImageDataUri }}" />

  {% if ProbabilityMapDataUri %}
  {% assign dbnet_item = LegendItems | where: "ElementClass", "dbnet-overlay" | first %}
  <g class="dbnet-overlay{% unless dbnet_item.DefaultVisible %} hidden{% endunless %}">
    <image width="{{ Width }}" height="{{ Height }}" xlink:href="{{ ProbabilityMapDataUri }}" />
  </g>
  {% endif %}

  {% assign bounding_boxes_item = LegendItems | where: "ElementClass", "bounding-boxes" | first %}
  <g class="bounding-boxes{% unless bounding_boxes_item.DefaultVisible %} hidden{% endunless %}">
    {% for box in BoundingBoxes %}
    <rect class="bounding-box" x="{{ box.X }}" y="{{ box.Y }}" width="{{ box.Width }}" height="{{ box.Height }}" />
    {% endfor %}
  </g>

  {% assign oriented_boxes_item = LegendItems | where: "ElementClass", "oriented-bounding-boxes" | first %}
  <g class="oriented-bounding-boxes{% unless oriented_boxes_item.DefaultVisible %} hidden{% endunless %}">
    {% for obb in OrientedBoundingBoxes %}
    <polygon class="oriented-bounding-box" points="{{ obb.Points }}" />
    {% endfor %}
  </g>

  {% assign polygons_item = LegendItems | where: "ElementClass", "polygons" | first %}
  <g class="polygons{% unless polygons_item.DefaultVisible %} hidden{% endunless %}">
    {% for polygon in Polygons %}
    <polygon class="polygon" points="{{ polygon.Points }}" />
    {% endfor %}
  </g>

  {% assign text_item = LegendItems | where: "ElementClass", "text-overlay" | first %}
  <g class="text-overlay{% unless text_item.DefaultVisible %} hidden{% endunless %}">
    {% for textItem in TextItems %}
    <text x="{{ textItem.CenterX }}" y="{{ textItem.CenterY }}"
          font-size="{{ textItem.FontSize }}px"
          transform="rotate({{ textItem.RotationAngle }}, {{ textItem.CenterX }}, {{ textItem.CenterY }})"
          text-anchor="middle" dominant-baseline="central" class="recognized-text">
      <title>{{ textItem.Confidence | times: 100 | round: 1 }}%</title>{{ textItem.Text }}
    </text>
    {% endfor %}
  </g>

  <foreignObject x="{{ Width | divided_by: 50 }}" y="{{ Width | divided_by: 50 }}" width="{{ Width | divided_by: 3 }}" height="{{ Width | divided_by: 4 }}">
    <div class="legend" xmlns="http://www.w3.org/1999/xhtml">
      {% for item in LegendItems %}
      <div class="legend-item" onclick="toggleLayer('{{ item.ElementClass }}')" data-class="{{ item.ElementClass }}" style="opacity: {% if item.DefaultVisible %}1{% else %}0.5{% endif %};">
        <div class="legend-swatch" style="background-color: {{ item.Color }};"></div>
        <span>{{ item.Description }}</span>
      </div>
      {% endfor %}
    </div>
  </foreignObject>

  <script>
    <![CDATA[
    function toggleLayer(className) {
      var elements = document.querySelectorAll('.' + className);
      var legendItem = document.querySelector('.legend-item[data-class="' + className + '"]');
      for (var i = 0; i < elements.length; i++) {
        var element = elements[i];
        if (element.classList.contains('hidden')) {
          element.classList.remove('hidden');
          legendItem.style.opacity = '1';
        } else {
          element.classList.add('hidden');
          legendItem.style.opacity = '0.5';
        }
      }
    }
    ]]>
  </script>
</svg>
