<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ML.OnnxRuntime" />
  </ItemGroup>

  <Target Name="BuildModels" BeforeTargets="BeforeBuild">
    <Exec Command="bash buildModels.sh" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

  <ItemGroup>
    <None Include="models\**\*" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <Target Name="CleanModels" BeforeTargets="BeforeClean">
    <RemoveDir Directories="models" Condition="Exists('models')" />
  </Target>

</Project>
