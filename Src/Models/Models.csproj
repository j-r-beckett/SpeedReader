<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ML.OnnxRuntime" />
  </ItemGroup>

  <Target Name="BuildModels" BeforeTargets="BeforeBuild;BeforeRebuild;Restore;BeforeCompile;PrepareForBuild;VSTest;Build">
    <Exec Command="bash buildModels.sh &quot;$(OutputPath)models&quot;" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

  <!-- Add models to None items after they're generated so they get copied -->
  <Target Name="AddModelsToProject" AfterTargets="BuildModels">
    <ItemGroup Condition="Exists('$(OutputPath)models')">
      <None Include="$(OutputPath)models\**\*">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>
  </Target>

  <Target Name="CleanModels" BeforeTargets="BeforeClean">
    <RemoveDir Directories="$(OutputPath)models" Condition="Exists('$(OutputPath)models')" />
  </Target>

</Project>
