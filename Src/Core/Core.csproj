<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>wheft</AssemblyName>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Models\Models.csproj" />
    <ProjectReference Include="..\Ocr\Ocr.csproj" />
    <ProjectReference Include="..\Video\Video.csproj" />
  </ItemGroup>

  <ItemGroup>
    <BinaryBuilderFiles Include="$(MSBuildProjectDirectory)/downloadBinaries.sh" />
  </ItemGroup>

  <Target Name="DownloadBinaries"
          BeforeTargets="BeforeBuild"
          Inputs="@(BinaryBuilderFiles)"
          Outputs="binaries/.downloaded">
    <RemoveDir Directories="binaries" Condition="Exists('binaries')" />
    <Exec Command="bash downloadBinaries.sh binaries" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Touch Files="binaries/.downloaded" AlwaysCreate="true" />
  </Target>

  <ItemGroup>
    <EmbeddedResource Include="binaries/ffmpeg" />
    <EmbeddedResource Include="binaries/ffprobe" />
    <EmbeddedResource Include="arial.ttf" />
  </ItemGroup>

  <Target Name="CleanBinaries" BeforeTargets="BeforeClean">
    <RemoveDir Directories="binaries" Condition="Exists('binaries')" />
  </Target>

</Project>
