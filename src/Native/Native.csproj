<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAotCompatible>true</IsAotCompatible>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <SpeedReaderOrtDir>$(MSBuildThisFileDirectory)Onnx/speedreader_ort</SpeedReaderOrtDir>
    <SpeedReaderCpuInfoDir>$(MSBuildThisFileDirectory)CpuInfo/speedreader_cpuinfo</SpeedReaderCpuInfoDir>
    <OnnxDir>$(MSBuildThisFileDirectory)Onnx/onnx</OnnxDir>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Native.Test" />
  </ItemGroup>

  <!-- Exclude native code directories from MSBuild tracking -->
  <ItemGroup>
    <Compile Remove="Onnx/onnx/**/*.cs" />
    <None Remove="Onnx/onnx/**/*" />
    <None Remove="Onnx/speedreader_ort/**/*" />
    <None Remove="CpuInfo/speedreader_cpuinfo/**/*" />
  </ItemGroup>

  <!-- Copy shared libraries for managed execution (flows to dependent projects via ProjectReference) -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'linux-x64' OR '$(RuntimeIdentifier)' == ''">
    <Content Include="$(SpeedReaderOrtDir)/out/shared/speedreader_ort.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
      <Link>libspeedreader_ort.so</Link>
    </Content>
    <Content Include="$(OnnxDir)/out/shared/libonnxruntime.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
      <Link>libonnxruntime.so</Link>
    </Content>
    <Content Include="$(SpeedReaderCpuInfoDir)/out/shared/speedreader_cpuinfo.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
      <Link>libspeedreader_cpuinfo.so</Link>
    </Content>
  </ItemGroup>

  <!--
    Native library build targets.
    Use BuildOnnx=true, BuildSROrt=true, or BuildSRCpuInfo=true to trigger builds.
    OnnxVersion is defined in Directory.Build.props.
  -->

  <!-- ONNX Runtime (Outputs="" forces target to always run when condition is met) -->
  <Target Name="BuildOnnx" BeforeTargets="PrepareForBuild" Condition="'$(BuildOnnx)' == 'true'" Outputs="">
    <PropertyGroup>
      <_OnnxMuslFlag Condition="'$(BuildMusl)' == 'true'">--musl</_OnnxMuslFlag>
    </PropertyGroup>
    <Exec Command="$(OnnxDir)/build.py --version $(OnnxVersion) $(_OnnxMuslFlag)" />
  </Target>

  <!--
    speedreader_ort: must run after BuildOnnx.
    - Needs onnx headers for compilation (build.py clones onnxruntime repo to get them)
    - Needs libonnxruntime.so for linking speedreader_ort.so
  -->
  <Target Name="BuildSROrt" BeforeTargets="PrepareForBuild" DependsOnTargets="BuildOnnx" Condition="'$(BuildSROrt)' == 'true'" Outputs="">
    <Exec Command="$(SpeedReaderOrtDir)/build.py" />
  </Target>

  <!-- speedreader_cpuinfo: standalone, no dependencies on onnx -->
  <Target Name="BuildSRCpuInfo" BeforeTargets="PrepareForBuild" Condition="'$(BuildSRCpuInfo)' == 'true'" Outputs="">
    <Exec Command="$(SpeedReaderCpuInfoDir)/build.py" />
  </Target>

  <!-- Deep clean: removes native build artifacts (onnx/out, speedreader_ort/out, speedreader_cpuinfo/out, .external) -->
  <Target Name="DeepClean" AfterTargets="Clean" Condition="'$(DeepClean)' == 'true'">
    <Exec Command="$(MSBuildThisFileDirectory)clean.py" />
  </Target>

</Project>
